{
    "name": "lukasjankowski/routing",
    "description": "Routing library",
    "type": "library",
    "license": "ISC",
    "authors": [
        {
            "name": "Lukas Jankowski",
            "email": "lj@lukasjankowski.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0",
        "psr/http-message": "^1.0",
        "symfony/http-foundation": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "nyholm/psr7": "^1.4",
        "friendsofphp/php-cs-fixer": "^2.18",
        "squizlabs/php_codesniffer": "^3.6",
        "mockery/mockery": "^1.4",
        "php-mock/php-mock-phpunit": "^2.6"
    },
    "suggest": {
        "predis/predis": "Allows the usage of redis as route cache",
        "symfony/yaml": "Allows the usage of yaml as a route resource",
        "ext-apcu": "Allows the usage of apcu as route cache"
    },
    "autoload": {
        "psr-4": {
            "LukasJankowski\\Routing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LukasJankowski\\Routing\\Tests\\": "tests/"
        }
    }
}
